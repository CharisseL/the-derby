extends ../shared/template
block content
  h2 The Gamblers
  #gamblers
    each gambler in gamblers
      .gambler(data-id=gambler._id.toString(), data-name=gambler.name)
        .photo(style='background-image:url("#{gambler.photo}");')
        .name= gambler.name
        .cash $#{gambler.cash.toFixed(2)}
        .results
          span.wins Wins: #{gambler.results.wins},
          span.losses Losses: #{gambler.results.losses}
        .spouse
          .photo(style='background-image:url("#{gambler.spouse.photo}");')
          .name=gambler.spouse.name
        .assets
          each asset in gambler.assets 
            .asset
              .photo(style='background-image:url("#{asset.photo}");')
                .name= asset.name
                .value $#{asset.value}

block scripts
 script(src='/js/user/gambler.js')

